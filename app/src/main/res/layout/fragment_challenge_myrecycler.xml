<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/border_challengellist">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical"
            android:layout_marginEnd="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_weight="8">
            <TextView
                android:id="@+id/startdaytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems ="10"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="2">
                <TextView
                    android:id="@+id/daytextview"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:ems="1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/border_challengeday"
                    android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/ic_baseline_run_circle_24"/>
                </LinearLayout>

            </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/border_challengetextbox">

            <TextView
             android:id="@+id/timertextview"
             android:layout_width="wrap_content"
             android:layout_height="20dp"
             android:layout_gravity="start"
             android:textSize="11sp"
             android:ems="10"
             android:text="남은시간: "/>

         <TextView
             android:id="@+id/achivetextview"
            android:layout_width="0dp"
             android:layout_height="20dp"
             android:layout_weight="2"
             android:textAlignment="textEnd"
             android:text="0"
             android:paddingTop="1dp"
             android:paddingStart="5dp"
             android:textSize="11sp"
             android:textStyle="bold" />

        </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="삭제"
            android:background="@drawable/border_challengebutton"
            android:textSize="20sp" />


</LinearLayout>